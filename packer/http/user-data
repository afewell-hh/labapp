  version: 1

  # Locale and keyboard
  locale: en_US.UTF-8
  keyboard:
    layout: us

  # Network configuration - use match to catch any ethernet interface
  network:
    version: 2
    ethernets:
      any:
        match:
          name: "e*"
        dhcp4: true

  # Storage configuration
  storage:
    layout:
      name: lvm

  # Identity
  identity:
    hostname: hedgehog-lab
    username: hhlab
    password: "$6$zekBnFoOMUC4ehNU$WHGkkd1xQxNlIdWia6DS6eO2qhYxHnAQyLh.O0M9Y1BwIuyCTe1TNs8b5fe.ORRTF/1wpPJJEM.vlmQvq.Orr/"
    # Password: hhlab (encrypted with SHA-512)

  # SSH configuration
  ssh:
    install-server: yes
    allow-pw: yes

  # Packages to install
  packages:
    - openssh-server
    - cloud-init
    - qemu-guest-agent
    - curl
    - wget
    - git
    - vim
    - net-tools
    - build-essential

  # Late commands
  late-commands:
    - echo 'hhlab ALL=(ALL) NOPASSWD:ALL' > /target/etc/sudoers.d/hhlab
    - chmod 440 /target/etc/sudoers.d/hhlab
    - curtin in-target --target=/target -- systemctl enable ssh
    - curtin in-target --target=/target -- lvextend -l +100%FREE /dev/ubuntu-vg/ubuntu-lv
    - curtin in-target --target=/target -- resize2fs /dev/ubuntu-vg/ubuntu-lv
    - curtin in-target --target=/target -- install -d -o hhlab -g hhlab -m 700 /home/hhlab/.ssh
    - curtin in-target --target=/target -- touch /home/hhlab/.ssh/authorized_keys
    - curtin in-target --target=/target -- chown hhlab:hhlab /home/hhlab/.ssh/authorized_keys
    - curtin in-target --target=/target -- chmod 600 /home/hhlab/.ssh/authorized_keys

  # User data - disable auto-updates during provisioning
  user-data:
    disable_root: false
    package_update: true
    package_upgrade: false
